<style>
    #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
@model aghaApi.Models.category
@RenderPage("~/Views/Shared/admin_bar.cshtml")
@{Layout = null;}
<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Update Category</h2>
    <div class="container overlay">
        <div class="row">
            <div class="form-group pull-left">
                <div class="panel-body">
                    @using (Html.BeginForm("EditcategoryinDb", "Admin", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.TextBoxFor(x => x.name, new { placeholder = "Title", @class = "form-control field required", type = "text", name = "name", @required = "required", value = "@Model.name" })<br />
                        <h4>Add image:</h4> <input style="min-width: 150px; width: 25%; margin-left: 10%" id="img" name="img" type="file" accept="image/jpeg">

                        <input type="submit" value="Update" class="btn btn-lg btn-info btn-block" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@RenderPage("~/Views/Shared/admin_footer.cshtml")
