<style>
    #sheet {
        margin-top: 1%;
        margin-bottom: 3%;
        margin-left: 10%;
        margin-right: 10%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>
@model Community2.worker_Portfolio
@RenderPage("~/Views/Shared/admin_bar.cshtml")
@{Layout = null;}
<div id="sheet" class="form-group" style="padding-left:30%;">
    <h2>Add New Worker</h2>
    <div class="container overlay">
        <div class="row">
            <div class="form-group pull-left">
                <div class="panel-body">
                    @using (Html.BeginForm("EditWorkerinDb", "Admin", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.TextBoxFor(x => x.name, new { placeholder = "Name", @class = "form-control field required", type = "text", name = "name", @required = "required",value="@Model.name" })<br />

                        @Html.TextBoxFor(x => x.cnic, new { placeholder = "CNIC", @class = "form-control field required", type = "text", pattern = "^[0-9+]{5}-[0-9+]{7}-[0-9]{1}$", name = "cnic", @required = "required",value="@Model.cnic" })<br />

                        @Html.TextBoxFor(x => x.contact1, new { placeholder = "Contact 1", @class = "form-control field required", type = "tel", pattern = "[0][0-4]{1}[0-9]{9}", name = "contact1", @required = "required",value="@Model.contact1" })<br />

                        @Html.TextBoxFor(x => x.contact2, new { placeholder = "Contact 2", @class = "form-control field required", type = "tel", pattern = "[0][0-4]{1}[0-9]{9}", name = "contact2", @required = "required", value = "@Model.contact2" })<br />

                        @Html.TextBoxFor(x => x.address, new { placeholder = "Address", @class = "form-control field required", type = "text", name = "address", @required = "required", value = "@Model.address" })<br />

                        @Html.TextBoxFor(x => x.experience_, new { placeholder = "Experience", @class = "form-control field required", type = "text", name = "experience", @required = "required", value = "@Model.experience" })<br />

                        //        @Html.TextBoxFor(x => x.sid, new { placeholder = "Service Id", @class = "form-control field required", type = "text", name = "sid", @required = "required" })<br />

                        <table class="table table-bordered table-hover" style="margin-left:-4%;">
                <thead style="font-weight:700">
                    <tr>
                        <th>Id</th>
                        <th>Availability Slot</th>
                        <th>Status</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var v in Model.Availability_Slots)
                        {
                            <tr>
                                
                                <td>@v.Id</td>
                                <td>@v.Availability_Slots1</td>
                                
                          @if(v.IsAvailable == 0)
                                {
                                <td><a class="btn btn-success" href="/Admin/changeSlot?@("id="+v.Id+"&wid="+Model.Id)">Available</a></td>
                                }
                                else
                                {
                                <td><a class="btn btn-success" href="/Admin/changeSlot?@("id="+v.Id+"&wid="+Model.Id)">Not Available</a></td>
                                }
                            </tr>

                        }
                    }
                </tbody>
            </table>
                        
                        <h4>Add image:</h4> <input style="min-width: 150px; width: 25%; margin-left: 10%" id="img" name="img" type="file" accept="image/jpeg">
                        <input type="submit" value="Update" class="btn btn-lg btn-info btn-block" />
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@RenderPage("~/Views/Shared/admin_footer.cshtml")
