@RenderPage("~/Views/Shared/admin_bar.cshtml")
@{Layout = null;}
@using aghaApi.Models
<link href="~/extra/bootstrap.css" rel="stylesheet" />
<script src="~/extra/bootstrap.js"></script>
<script>
    function Search() {
        var search = $('#search').val();
        var cat = $('#category').val();
        search = search.replace(/ /g, '%20');
        $('#songs').load('/User/Search/?search=' + search);
    }
</script>
<section>
    <div class="container" id="sheet" style="width:80%;">
        <h2>All Worker Details</h2>
        <div class="row" style="margin:3%;">
            <div class="col-md-2">
                <h4 id="searchlabel" style="margin-top:11%;margin-left:7%;">Search:</h4>
            </div>
            <div class="col-md-6">
                <input type="text" name="search" id="search" placeholder="Search Worker" class="form-control" style="width:100%;" />
            </div>
            <div class="col-md-1">
                <button class="btn btn-primary" type="button" id="Go" onclick="return Search();"><i class="glyphicon glyphicon-search"></i></button>
            </div>
            <table class="table table-bordered table-hover" style="margin-left:-4%;">
                <thead style="font-weight:700">
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Service Type</th>
                        <th>Worker Name</th>
                        <th>Request Date</th>
                        <th>Request Time</th>
                        <th>Request Status</th>
                        <th>Alloted Slots</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Id</td>
                                <td>@v.user.username</td>
                                <td>@v.service.service_type</td>
                                <td>@v.worker_Portfolio.name</td>
                                <td>@v.request_date</td>
                                <td>@v.request_time</td>
                                <td>@v.request_status</td>
                                <td>@v.Alloted_slots</td>

                                <td><a class="btn btn-success" href="/Home/DeleteRequest/@v.Id">Delete</a></td>

                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
@RenderPage("~/Views/Shared/admin_footer.cshtml")