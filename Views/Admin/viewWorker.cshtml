@RenderPage("~/Views/Shared/admin_bar.cshtml")
@{Layout = null;}
@using aghaApi.Models
<link href="~/extra/bootstrap.css" rel="stylesheet" />
<script src="~/extra/bootstrap.js"></script>

<section>
    <div class="container" id="sheet" style="width:80%;">
        <h2>All Worker Details</h2>
       
            <table class="table table-bordered table-hover" style="margin-left:-4%;">
                <thead style="font-weight:700">
                    <tr>
                        <th>Image</th>
                        <th>Id</th>
                        <th>Name</th>
                        <th>CNIC</th>
                        <th>Service</th>
                        <th>Contact 1</th>
                        <th>Contact 2</th>
                        <th>Address</th>
                        <th>Experience</th>
                        <th>Type</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var v in Model)
                        {
                            <tr>
                                <td style="width:16%"><img src="~/worker_@(""+v.Id+".jpeg")" class="img-circle" style="width:90%;height:6%" /></td>
                                <td>@v.Id</td>
                                <td>@v.name</td>
                                <td>@v.cnic</td>
                                <td>@v.service.service_type</td>
                                <td>@("0" + v.contact1)</td>
                                <td>@("0" + v.contact2)</td>
                                <td>@v.address</td>
                                <td>@v.experience_</td>
                          
                                <td><a class="btn btn-success" href="/Admin/EditWorker/@v.Id">Update</a><a class="btn btn-danger" href="/Admin/DeleteWorker/@v.Id">Delete</a></td>

                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
</section>
@RenderPage("~/Views/Shared/admin_footer.cshtml")
