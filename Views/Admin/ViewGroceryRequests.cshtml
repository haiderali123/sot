@RenderPage("~/Views/Shared/admin_bar.cshtml")
@{Layout = null;}
@using aghaApi.Models
<link href="~/extra/bootstrap.css" rel="stylesheet" />
<script src="~/extra/bootstrap.js"></script>

<section>
    <div class="container" id="sheet" style="width:80%;">
        <h2>All Groceries</h2>
        
            <table class="table table-bordered table-hover" style="margin-left:-4%;">
                <thead style="font-weight:700">
                    <tr>
                        <th>Id</th>
                        <th>User</th>
                        <th>Items</th>
                        <th>Date</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.Id</td>
                                <td>@v.user.name</td>
                                <td>@v.items</td>
                                <td>@v.date</td>
                                <td><a class="btn btn-danger" href="/Admin/DeleteGrocery/@v.Id">Delete</a></td>


                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>
</section>
@RenderPage("~/Views/Shared/admin_footer.cshtml")

